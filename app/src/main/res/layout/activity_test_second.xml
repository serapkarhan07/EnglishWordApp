<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundnew"
    tools:context="com.pyildizt.sony.englishword.testSecond">

    <Button
        android:id="@+id/test1"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"


        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/test2"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"

        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/test3"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"


        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test1" />

    <Button
        android:id="@+id/test4"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginEnd="20dp"

        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/test2" />

    <TextView
        android:id="@+id/testview"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="119dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test3"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>
